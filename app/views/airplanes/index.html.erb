<div class="container-fluid">
  <div class="row">
    <h2>Airline Dashboard</h2>
  </div>
  <hr>
  <div class="page">

    <% if current_user.admin? %>
      <div class="mini-nav">
        <ul>
          <li class="btn btn-default"><%= link_to 'planes' %></li>
          <li class="btn btn-default"><%= link_to 'flights' %></li>
          <li class="btn btn-default"><%= link_to 'reservations' %></li>
        </ul>
      </div>
    <% end %>

    <% if current_user && !current_user.admin %>
      <div class="mini-nav">
          <ul>
            <li><%= link_to 'reservations' %></li>
          </ul>
      </div>
    <% end %>

  </div>
</div>

<script type="text/template" id="airplane-list-template">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 col-md-offset-1">
        <a href="#/new" class="btn btn-default">Create Plane</a>
        <hr>
        <table class="table table-responsive table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Rows</th>
              <th>Columns</th>
            </tr>
          </thead>
          <tbody>
            <% @airplanes.each do |airplane| %>
              <tr>
                <td><%= airplane.name %></td>
                <td><%= airplane.rows %></td>
                <td><%= airplane.cols %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</script>

